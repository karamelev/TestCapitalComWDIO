{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2022",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node",
            "@wdio/globals/types",
            "expect-webdriverio",
            "@wdio/mocha-framework",
        ],
    },
    "include": [
        "./src/**/*",
        "./test/*",
        "./**/*"
    ]
}
